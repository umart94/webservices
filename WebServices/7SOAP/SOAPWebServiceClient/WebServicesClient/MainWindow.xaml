<Window x:Class="WebServicesClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Web Service Client" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="322*"/>
            <ColumnDefinition Width="195*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="txtInput1" HorizontalAlignment="Left" Height="23" Margin="97,28,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"
                 FontSize="16"/>
        <TextBox x:Name="txtInput2" HorizontalAlignment="Left" Height="23" Margin="97,61,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"
                 FontSize="16"/>
        <Label Content="Value 1:" HorizontalAlignment="Left" Margin="26,24,0,0" VerticalAlignment="Top"
               FontSize="16"/>
        <Label Content="Value 2:" HorizontalAlignment="Left" Margin="26,57,0,0" VerticalAlignment="Top"
               FontSize="16"/>
        <Button x:Name="btnCalculate" Content="Calculate" HorizontalAlignment="Left" Margin="97,103,0,0" VerticalAlignment="Top" Width="75" FontSize="16" Click="btnCalculate_Click"/>
        <TextBlock x:Name="txtOutput" HorizontalAlignment="Left" Margin="50,144,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.643,-0.074" FontSize="16" Width="350"/>

    </Grid>
</Window>
